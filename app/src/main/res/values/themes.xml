<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Recipe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/soft_black</item>
        <item name="colorPrimaryVariant">@color/soft_brown</item>
        <item name="colorOnPrimary">@color/soft_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/soft_gray</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Recipe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Recipe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.AppTheme.OptionsButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/black</item>
        <item name="icon">@drawable/ic_baseline_menu_36dp</item>
        <item name="android:minWidth">@dimen/image_button_spacing_48dp</item>
        <item name="android:minHeight">@dimen/image_button_spacing_48dp</item>
    </style>

    <style name="Widget.AppTheme.FavoriteButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/favorite_checked</item>
        <item name="icon">@drawable/ic_baseline_favorite_36dp</item>
        <item name="android:minWidth">@dimen/image_button_spacing_48dp</item>
        <item name="android:minHeight">@dimen/image_button_spacing_48dp</item>
    </style>

    <style name="Widget.AppTheme.AddStepButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="background">@color/soft_brown</item>
        <item name="iconTint">@color/soft_brown</item>
        <item name="icon">@drawable/ic_baseline_step_add_24dp</item>
        <item name="android:minWidth">@dimen/image_button_spacing_48dp</item>
        <item name="android:minHeight">@dimen/image_button_spacing_48dp</item>
    </style>

</resources>