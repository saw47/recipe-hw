<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editRecipeFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/food_vegetables"
    android:clickable="true"
    android:focusable="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/top_app_bar_edit_recipe" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/edit_field_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/edit_step_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/margin_common_spacing_8dp"
            android:layout_marginTop="@dimen/margin_fab_vertical_96dp"
            android:layout_marginEnd="@dimen/margin_common_spacing_8dp"
            android:background="@color/light_gray_pink"
            android:gravity="center"
            android:hint="@string/hint_recipe_description"
            android:minHeight="@dimen/recipe_card_height_240dp"
            android:singleLine="false"
            android:textSize="@dimen/text_middle_spacing_16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/image_frame"
            />

        <FrameLayout
            android:id="@+id/image_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ImageStepEditFragment"
            android:background="@android:color/transparent"
            android:minHeight="@dimen/recipe_card_height_240dp"
            app:layout_constraintTop_toBottomOf="@id/edit_step_description"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/margin_common_spacing_8dp"
            android:layout_marginBottom="@dimen/margin_fab_vertical_96dp"
            >

            <ImageView
                android:id="@+id/image_step_editable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="@dimen/recipe_card_height_240dp"

                >
            </ImageView>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/delete_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_delete_72dp"
                android:background="@android:color/transparent"
                >
            </androidx.appcompat.widget.AppCompatImageButton>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>