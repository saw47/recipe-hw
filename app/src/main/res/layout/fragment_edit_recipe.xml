<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/editRecipeFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/food_vegetables"
    >
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/gone_down_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="@dimen/common_spacing_24dp"
        android:layout_marginBottom="@dimen/common_spacing_24dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_down_24dp"
        >
    </com.google.android.material.floatingactionbutton.FloatingActionButton>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/gone_up_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="@dimen/margin_fab_vertical_96dp"
        android:layout_marginStart="@dimen/common_spacing_24dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_up_24dp"
        >
    </com.google.android.material.floatingactionbutton.FloatingActionButton>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/top_app_bar_edit_recipe"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            />
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/expand_add_step_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="@dimen/common_spacing_24dp"
        android:contentDescription="@string/add_new_step"
        android:src="@drawable/ic_baseline_step_add_24dp"
        >
    </com.google.android.material.floatingactionbutton.FloatingActionButton>

    <ScrollView
        android:id="@+id/scrollable_edit_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/editable_field_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_vertical_76dp"
            android:layout_marginTop="@dimen/margin_vertical_76dp"
            >

            <EditText
                android:id="@+id/edit_author_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_common_spacing_8dp"
                android:layout_marginEnd="@dimen/margin_common_spacing_8dp"
                android:singleLine="false"
                android:textSize="@dimen/text_middle_spacing_16sp"
                android:background="@color/light_gray"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toTopOf="parent"
                android:hint="@string/hint_recipe_author"
                android:paddingStart="@dimen/margin_common_spacing_8dp"
                android:gravity="left"
                android:minHeight="@dimen/image_button_spacing_48dp"
                />

            <EditText
                android:id="@+id/edit_recipe_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_common_spacing_8dp"
                android:layout_marginEnd="@dimen/margin_common_spacing_8dp"
                android:layout_marginTop="@dimen/margin_common_spacing_8dp"
                android:singleLine="false"
                android:textSize="@dimen/text_middle_spacing_16sp"
                android:background="@color/light_gray"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@id/edit_author_text"
                android:hint="@string/hint_recipe_name"
                android:gravity="left"
                android:paddingStart="@dimen/margin_common_spacing_8dp"
                android:minHeight="@dimen/margin_fab_vertical_96dp"
                />

            <Spinner
                android:id="@+id/category_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_outline_2dp"
                app:layout_constraintTop_toBottomOf="@id/edit_recipe_name"
                app:layout_constraintBottom_toTopOf="@id/edit_fragment_steps_container"
                android:layout_margin="@dimen/margin_common_spacing_8dp"
                android:singleLine="false"
                android:textSize="@dimen/text_middle_spacing_16sp"
                android:background="@color/light_gray"
                android:entries="@array/category_spinner"
                android:gravity="center"
                android:minHeight="@dimen/common_spacing_24dp"
                >
            </Spinner>

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/edit_fragment_steps_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/category_spinner"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/margin_common_spacing_8dp"
                android:minHeight="@dimen/recipe_card_height_240dp"
                >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recipeEditStepsRecyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/recipe_step_card"
                    >
                </androidx.recyclerview.widget.RecyclerView>
            </androidx.coordinatorlayout.widget.CoordinatorLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>